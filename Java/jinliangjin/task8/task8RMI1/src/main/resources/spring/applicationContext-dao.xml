<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:spring/applicationContext-RMI.xml"/>
    <import resource="classpath:spring/applicationContext-aop.xml"/>
    <import resource="classpath:spring/applicationContext-redis.xml"/>

    <!--properties-->
    <context:property-placeholder location="classpath:DBConnection.properties" ignore-unresolvable="true"/>
    <context:property-placeholder location="classpath:aliyunOOS.properties" ignore-unresolvable="true"/>
    <context:property-placeholder location="classpath:cookie.properties" ignore-unresolvable="true"/>
    <context:property-placeholder location="classpath:des.properties" ignore-unresolvable="true"/>
    <context:property-placeholder location="classpath:hibernateValidationMessage.properties" ignore-unresolvable="true"/>
    <context:property-placeholder location="classpath:sendEmail.properties" ignore-unresolvable="true"/>

    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="${jdbc.driver}"/>
        <property name="jdbcUrl" value="${jdbc.url}"/>
        <property name="user" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
        <property name="maxPoolSize" value="50"/>
    </bean>
    <bean id="sessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="mapperLocations" value="classpath:mybatis/*Mapper.xml"/>
        <property name="typeAliasesPackage" value="com.ptt.pojo"/>
    </bean>
    <bean id="mapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.ptt.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sessionFactory"/>
    </bean>
</beans>