<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!--namespace:命名空间，用于隔离sql-->
<mapper namespace="test1">

    <select id="queryDemoById" parameterType="int" resultType="cn.wp.pojo.Demo">
     select * from Demo where id =#{ID}
  </select>

    <select id="findAll"  resultType="cn.wp.pojo.Demo">
     select * from Demo
  </select>

    <insert id="add" >
        insert into Demo values(#{id},#{name},#{qq},#{school})
    </insert>
</mapper>