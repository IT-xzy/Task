<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.wp.dao.UserDao">

    <!--映射Dao接口里的方法,替代了实现类的作用-->
    <insert id="insert" parameterType="cn.wp.entity.User">
        insert into user (name,password) VALUES (#{name},#{password})
    </insert>
    <select id="selectByName" resultType="cn.wp.entity.User">
        select * from user where name = #{name}
    </select>
    <select id="selectByCondition" resultType="cn.wp.entity.User">
        select * from user where name = #{name} and password = #{password}
    </select>
    <select id="selectById" resultType="cn.wp.entity.User" parameterType="cn.wp.entity.User">
            select * from user where id = #{id}
    </select>
    <select id="selectAll" resultType="cn.wp.entity.User">
       SELECT * FROM user
    </select>

</mapper>