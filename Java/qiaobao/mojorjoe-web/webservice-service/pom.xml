        <!--druid数据库连接池版本号-->
        <druid.version>1.0.13</druid.version>

        <!-- log4j日志包版本号 -->
        <slf4j.version>1.7.18</slf4j.version>
        <log4j.version>1.2.17</log4j.version>


    </properties>

