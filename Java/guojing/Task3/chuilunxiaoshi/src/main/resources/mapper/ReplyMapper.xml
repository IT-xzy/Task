<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTDMapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ptteng.dao.ReplyDao">


    <resultMap id="replyMap" type="com.ptteng.entity.Reply">
        <id column="id" property="id"/>
        <result column="message" property="message"/>
        <result column="bbs_id" property="bbsId"/>
        <result column="create_at" property="createAt"/>
        <result column="update_at" property="updateAt"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>


    <insert id="insertReply" useGeneratedKeys="true" keyProperty="id" parameterType="com.ptteng.entity.Reply">
        insert into bbs (message,bbs_id,create_at,update_at,create_by,update_by)
        values (#{message},#{bbsId},#{createAt},#{updateAt},#{createBy},#{updateBy})
    </insert>


    <update id="updateReply" parameterType="com.ptteng.entity.Reply">
        update bbs message=#{message},update_at=#{updateAt},update_by=#{updateBy},
        where id=#{id}
    </update>

    <select id="findReply" resultType="com.ptteng.entity.Reply" parameterType="com.ptteng.entity.Reply">
        select * from bbs where bbs_id=#{bbsId}
    </select>

    <delete id="deleteById" parameterType="long">
         delete from bbs where id=#{id}
    </delete>


</mapper>
