    <definition name="tilesTest1" template="/WEB-INF/jsp/tilesTest/templet.jsp">
        <put-attribute name="title" value="这是title"/>
        <put-attribute name="head" value="/WEB-INF/jsp/tilesTest/head.jsp"/>
        <put-attribute name="top" value="/WEB-INF/jsp/tilesTest/top.jsp" />
        <put-attribute name="menu" value="/WEB-INF/jsp/tilesTest/menu.jsp" />
        <put-attribute name="body" value="/WEB-INF/jsp/tilesTest/body/body1.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/tilesTest/footer.jsp" />
    </definition>

    <definition name="tilesTest2" extends="tilesTest1">
        <put-attribute name="body" value="/WEB-INF/jsp/tilesTest/body/body2.jsp" />
    </definition>

    <definition name="tilesTest3" extends="tilesTest1">
        <!-- el表达式 -->
        <put-attribute name="title" expression="${title}"/>
        <put-attribute name="body" expression="/WEB-INF/jsp/tilesTest/body/${body}.jsp" />
    </definition>
</tiles-definitions>