/*reset*/
html{
    font-size: 10px;
}
@media screen and (min-width: 480px){
    html{
        font-size: 15px;
    }
}
@media screen and (min-width: 640px){
    html{
        font-size: 17px;
    }
}
@media screen and (min-width: 720px){
    html{
        font-size: 20px;
    }
}
ul,
li{
    list-style-type: none;
}
h4,
p,
ul{
    margin: 0;
    padding: 0;
}
h4{
    margin: 50px 0;
    font-weight: bolder;
    font-size: .9rem;
    text-align: center;
}
a{
    color: #fff;
}
/*layout*/
/*header*/
.header{
    position: relative;
    line-height: 40px;
    font-size: .7rem;
    color: #29b078;
}
.header-right{
    line-height: 40px;
}
.header-right img{
    margin-left: 5px;
}
/*navigation*/
/*.navigition包括.nav-area和.navigation-img元素*/
.navigation{
    width: 100%;
    background: #29b078;
    font-size: .8rem;
    margin-bottom: 0;
    border: 0;
}

@media (min-width: 768px) {
    .collapse ul{
        float: right;
    }
    .collapse ul li a{
        padding: 38px 15px;
    }
    .collapse ul li:first-child{
        border-bottom: 4px solid #fff;
    }
    .collapse ul li:hover{
        border-bottom: 4px solid #fff;
    }
}
.collapse .navbar-nav > li > a{
    color: #fafafa;
}
.collapse .navbar-nav > li > a:hover,
.collapse .navbar-nav > li > a:focus {
    background: #26a973;
    color: #fff;
}
.navigation-btn{
    margin-top: 35px;
    border: 0;
}
.navigation-img{
    display: inline-block;
    line-height: 100px;
}
/*content*/
.content{
    background: #fafafa;
}
/*包含.box-area元素*/
.row-wrap{
    padding-top: 150px;
    padding-bottom: 50px;
}
/*包含.icon1 .icon2 .icon3元素*/
.box-area{
    padding:0 20px;
}
.box-area:last-child{
    border-left: 1px dashed #dedede;
    padding-top: 40px;
    color: #26a26f;
}
.box-area div{
    background: url("../images/xutbitu.png") no-repeat;
}
.box-area .icon1{
    width:43px;
    height:62px;
    background-position:0 0;
}
.box-area .icon2{
    width:60px;
    height:62px;
    background-position:-44px 0px;
}
.box-area .icon3{
    width:52px;
    height:62px;
    background-position:-105px 0px;
}
.box-area p{
    margin:15px 0 ;
    font-size: .8rem;
    color: #999999;
}
/*包含.item1 .itme2 元素*/
.second-box{
    padding-bottom: 50px;
}
.second-box span{
    display: inline-block;
    vertical-align: middle;
}
.second-box .item1{
    background: #fff;
    width: 70px;
    height: 70px;
    border-radius: 50%;
    text-align: center;
    line-height: 70px;
    font-size: .9rem;
    color: #29b078;
    box-shadow: 2px 2px 2px #888888;
}
.second-box .item2{
    width: 156px;
    padding-left: 10px;
}
.third-box-wrap{
    padding-bottom: 150px;
}
/*包含.box-top元素*/
.third-box{
    padding:20px;
    background: #fff;
    border: 1px solid #eeeded;
}
.third-box .box-top{
    width: 110px;
    height: 110px;
}
.third-box img{
    width: 128px;
    height: 128px;
}
.third-box p{
    font-size: .8rem;
    color: #999999;
}
.carousel-indicators {
   bottom: 100px;
}
@media screen and (min-width: 768px){
    .carousel-indicators {
        bottom: 100px;
    }
}
.carousel-indicators li{
    display: inline-block;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    border: 0;
    box-shadow: 1px 1px 1px #888888;
}
.carousel-indicators .active{
    width: 15px;
    height: 15px;
    background: #29b078;;
}
/*包含.bottom-box元素*/
.bottom-box-wrap{
    border: 1px solid #f6f6f6;
    margin-bottom: 90px;
}
.bottom-box{
    float: left;
    height: 180px;
    width: 100%;
    line-height: 180px;
    text-align: center;
    background: #fff;
    overflow: hidden;
}
.bottom-box:hover{
    box-shadow: 0 0 6px 2px #888888;
}
@media (min-width: 765px){
    .bottom-box{
        width: 50%;
    }
}
@media (min-width: 992px){
    .bottom-box{
        width: 20%;
    }
}
.bottom-box img{
    display: inline-block;
}
/*包含.ul-wrap元素*/
.content-footer{
    background: #fff;
}
.ul-wrap{
    margin-bottom: 20px;
}
.content-footer li{
    float: left;
    line-height: 30px;
    width: 50%;
    padding: 0 10px;
}
@media (min-width: 765px) {
    .content-footer li{
        width: 20%;
    }
}
@media (min-width: 992px) {
    .content-footer li{
        width: 10%;
    }

}
.content-footer li a{
    display: inline-block;
    line-height: 30px;
    color: #999999;
    border-bottom: 2px solid transparent;
}
.content-footer li a:hover{
    border-bottom: 2px solid #29b078;
    text-decoration: none;
}
.content-footer li span{
    display: inline-block;
    width: 5px;
    height: 5px;
    background: #999999;
    border-radius: 50%;
    margin-right: 10px;
    vertical-align: middle;
}
/*footer*/
.footer{
    background: #29b078;
    color: #fff;
}
.footer-wrap{
    padding: 30px 0;
}
.footer p{
    padding-bottom: 15px;
}
.footer a{
    display: inline-block;
    line-height: 30px;
    border-bottom: 1px solid transparent;
}
.footer a:hover{
    color: #fff;
    border-bottom: 1px solid #fff;
    text-decoration: none;
}
.footer-center-content a{
    margin-right: 20px;
}
.bottom{
    line-height: 30px;
    text-align: center;
    border-top: 1px solid #fff;
}

