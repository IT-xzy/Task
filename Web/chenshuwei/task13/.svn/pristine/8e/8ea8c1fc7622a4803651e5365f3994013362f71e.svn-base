html{
  font-size: 50px;
  @media(min-width:480px) {
    font-size: 65px;
  }
  @media(min-width:600px) {
    font-size: 80px;
  }
  @media(min-width:720px) {
    font-size: 100px;
  }
}
header{
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: .78rem;
  padding: 0 .2rem;
  background: #29bde0;
}
footer{
  position: fixed;
  bottom: 0;
  z-index: 999;
  width: 100%;
}